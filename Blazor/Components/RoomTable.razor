@using DomainModels

<div class="card shadow-sm mt-4">
    <div class="card-body">
        <h5 class="card-title">
            <i class="bi bi-house-door-fill"></i> Rooms
        </h5>
        @if (RoomGetDtos == null)
        {
            <p><em>Loading rooms...</em></p>
        }
        else if (RoomGetDtos.Length == 0)
        {
            <div class="alert alert-info">No rooms found.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Room number</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in RoomGetDtos)
                        {
                            <tr>
                                <td>@r.Id</td>
                                <td>@r.RoomNumber</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public RoomGetDto[]? RoomGetDtos { get; set; }
} 