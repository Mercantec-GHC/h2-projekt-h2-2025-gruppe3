@page "/hotels"
@using DomainModels
@inject Blazor.Services.APIService ApiService

<h1 class="mb-3">Hoteller</h1>

@if (hotels == null)
{
    <p><em>Loader hoteller...</em></p>
}
else if (hotels.Length == 0)
{
    <div class="alert alert-info">Ingen hoteller fundet.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Navn</th>
                    <th>Adresse</th>
                    <th>By</th>
                    <th>Land</th>
                    <th>Telefon</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var h in hotels)
                {
                    <tr>
                        <td>@h.Id</td>
                        <td>@h.Name</td>
                        <td>@(string.IsNullOrWhiteSpace(h.Road) ? "-" : h.Road)</td>
                        <td>@h.City</td>
                        <td>@h.Country</td>
                        <td>@h.Phone</td>
                        <td>@h.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private HotelGetDto[]? hotels;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Hent op til 100 hoteller (tilpas efter behov)
            hotels = await ApiService.GetHotelsAsync(3);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Fejl ved hentning af hoteller: {ex.Message}");
            hotels = Array.Empty<HotelGetDto>();
        }
    }
}
